    </div>
    <header>
        <div class="mobile-menu">
            <button class="mobile-menu-button" type="button" value="DROPDOWN" onclick="openNav()"></button>
        </div>
        <img src="~/DesignDrafts/logosmall.png" class="logo-small" />
        <div class="menu">
            <button class="menubutton" type="button" value="LATEST">LATEST</button>
            <button class="menubutton" type="button" value="POPULAR">POPULAR</button>
            <button class="menubutton" type="button" value="MOVIE DEALS">MOVIE DEALS</button>
            <button class="menubutton">CATEGORIES</button>
            @if (SignInManager.IsSignedIn(User) && User.IsInRole("Administrator"))
            {
            <button class="menubutton" asp-controller="Admin" asp-action="AddMovie" asp-area="">ADD MOVIE</button>
            }
        </div>
        <button class="cart-button" asp-action="Cart"></button>
    </header>
    <div class="container">
        <main role="main" style="padding: 7.5em 1em">
            @RenderBody()
        </main>
    </div>
    <footer>
        <div class="footertitle">Mary's Majestic Movies</div>
        <div class="footersearch">
            <form>
                <input class="search" type="text" name="search" />
            </form>
        </div>
        <div class="footeruser">
            <partial name="_LoginPartial" />
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>