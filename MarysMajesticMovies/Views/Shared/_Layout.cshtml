<!DOCTYPE html>
<html>
<head>
    <title>Mary's Majestic Movies</title>
    <link href="~/DesignDrafts/style.css" rel="stylesheet" type="text/css"/>
    <script src="~/DesignDrafts/script.js" type="text/javascript"></script>
    <meta charset="utf-8" name="viewport" content="user-scalable=no"/>
</head>
<body id="mainpagebody">
    <header>
        <img src="~/DesignDrafts/logosmall.png" class="logo-small" />
        <div class="menu">
            <button class="menubutton" type="button" value="LATEST">LATEST</button>
            <button class="menubutton" type="button" value="POPULAR">POPULAR</button>
            <button class="menubutton" type="button" value="MOVIE DEALS">MOVIE DEALS</button>
            <button class="menubutton">CATEGORIES</button>
        </div>
        <button class="userpanel"></button>
    </header>
    <div class="container">
        <main role="main" style="padding: 7.5em 1em">
            @RenderBody()
        </main>
    </div>
    <footer>
        <div class="footertitle">Mary's Majestic Movies</div>
        <div class="footersearch">
            <form>
                <input class="search" type="text" name="search" />
            </form>
        </div>
        <div class="footeruser">
            <p><a>Log in</a> or <a>create an account</a></p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>