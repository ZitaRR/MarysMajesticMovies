            <h1>Blockbusters</h1>
            <div class="scroll">
                <div class="movies" id="bb-scroll">
                    <div id="blockbusters">
                        @foreach (var item in Model.Blockbuster)
                        {
                            <img src="@item.PosterUrl" class="movie">
                        }
                    </div>
                </div>
            </div>
